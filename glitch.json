{
  "install": "pip install -r requirements.txt",
  "start": "python app.py",
  "watch": {
    "ignore": [
      "\\.pyc$"
    ],
    "install": {
      "include": [
        "^requirements\\.txt$"
      ]
    },
    "restart": {
      "include": [
        "\\.py$"
      ]
    },
    "throttle": 1000
  }
}
